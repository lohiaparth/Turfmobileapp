<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/leafgreen"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton"
                android:text="LIST TURF"
                android:textAlignment="center"
                android:textColor="@color/darkgreen"
                android:textSize="70sp"
                android:textStyle="bold" />

            <!-- Company Name Field -->
            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_add_business_24"
                android:drawablePadding="8dp"
                android:hint="Company Name"
                android:padding="8dp"
                android:textColor="@color/black" />

            <!-- Email Field -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black" />

            <!-- Contact Field -->
            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_call_24"
                android:drawablePadding="8dp"
                android:hint="Contact"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="@color/black" />

            <!-- Address Field -->
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:drawablePadding="8dp"
                android:hint="Locality"
                android:padding="8dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/addLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/border_green"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/gmap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search Name, Area"
                    android:padding="8dp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/gmap_btn"
                    android:layout_width="37dp"
                    android:layout_height="34dp"
                    android:src="@drawable/baseline_search_24" />
            </LinearLayout>



            <!-- Sport Field -->
            <EditText
                android:id="@+id/sport"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_sports_cricket_24"
                android:drawablePadding="8dp"
                android:hint="Sport"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:drawablePadding="8dp"
                android:hint="Price"
                android:padding="8dp"
                android:textColor="@color/black" />

            <!-- Image Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_green"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_image_24" />

                <TextView
                    android:id="@+id/imageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Image"
                    android:textSize="17sp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/uploadImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="110dp"
                    android:backgroundTint="@color/green"
                    android:text="Upload"
                    android:textSize="10dp" />
            </LinearLayout>

            <!-- List Turf Button -->
            <Button
                android:id="@+id/btnListTurf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/leafgreen"
                android:text="List Turf"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
